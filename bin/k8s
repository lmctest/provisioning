#!/usr/bin/env bash
#

#
# Author:  Martin Holy / LMC / Architecture
# Created: Prague, 12/2018
# Descr.:  Switch k8s cluster context,
#          so you can easily change the cluster
#          you want to control
#

function usage() {
  echo -e "Usage:\n\t$(dirname ${0})/$(basename ${0}) K8S_CONTEXT"
  echo -e "\nExample:\n\t$(dirname ${0})/$(basename ${0}) lmc"
}

if [[ $# -gt 1 ]]
then
  echo "Wrong number of arguments was specified. Try better next time ;)"
  usage
  exit 1
fi

function get_cluster_name() {
  kubectl config current-context || return 1
  return 0
}

function get_node_list() {
  kubectl get nodes -o wide || return 1
  return 0
}

function print_error() {
  local p_level="$(echo ${1} | tr 'a-z' 'A-Z')"
  local p_msg="${2}"
  local ldate="$(date '+%Y-%m-%d %H:%M:%S')"
  
  echo "${ldate} :: [[ ${p_level} ]] :: ${p_msg}"
  return
}

readonly CHOICE="$(echo ${1} | tr 'A-Z' 'a-z')"
case ${CHOICE} in
  "gke")  gcloud container clusters get-credentials standard-cluster-2 --zone europe-west3-a --project lmctest2019 &>/dev/null \
          && kubectl config use-context gke_lmctest2019_europe-west3-a_standard-cluster-2 &>/dev/null \
          && get_node_list &>/dev/null
 
          if [[ $? -ne 0 ]]
          then
            print_error "ERROR" "Could not switch to gke ks8." \
            && exit 10
          fi
 
          print_error "INFO" "Switched to gke k8s."
          echo -e "\nCurrent cluster: $(get_cluster_name 2>/dev/null)\n"
          get_node_list 2>/dev/null
          ;;
  "lmc")  kubectl config use-context lmc &>/dev/null \
          && get_node_list &>/dev/null

          if [[ $? -ne 0 ]]
          then
            print_error "ERROR" "Could not switch to LMC ks8." \
            && exit 11
          fi

          print_error "INFO" "Switched to LMC k8s."
          echo -e "\nCurrent cluster: $(get_cluster_name 2>/dev/null)\n"
          get_node_list 2>/dev/null
          ;;
  "mini") kubectl config use-context minikube &>/dev/null \
          && get_node_list &>/dev/null

          if [[ $? -ne 0 ]]
          then
            print_error "ERROR" "Could not switch to minikube ks8." \
            && exit 11
          fi

          print_error "INFO" "Switched to minikube k8s."
          echo -e "\nCurrent cluster: $(get_cluster_name 2>/dev/null)\n"
          get_node_list 2>/dev/null
          ;;
  *)      echo "Wrong context specified."
          usage
          get_node_list &>/dev/null
 
          if [[ $? -ne 0 ]]
          then
            echo -e "\nNo working cluster found."
            exit 2
          fi

          echo -e "\nCurrent cluster: $(get_cluster_name 2>/dev/null)\n"
          get_node_list 2>/dev/null
          ;;
esac

exit 0
